{
  "name": "devferreirag-api",
  "version": "1.0.0",
  "description": "Backend API for DevFerreiraG portfolio with SEO and analytics capabilities",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "start": "NODE_ENV=production node dist/index.js",
    "dev": "cross-env NODE_ENV=development nodemon --exec node --experimental-specifier-resolution=node --loader ts-node/esm src/index.ts",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "prepare": "npm run build",
    "postinstall": "mkdir -p public/js logs",
    "clean": "rimraf dist",
    "rebuild": "npm run clean && npm run build",
    "check-types": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\"",
    "prestart": "npm run build",
    "start:prod": "NODE_ENV=production pm2 start dist/index.js --name devferreirag-api",
    "setup": "npm install && npm run build && npm run postinstall"
  },
  "keywords": [
    "portfolio",
    "developer",
    "fullstack",
    "api",
    "seo",
    "analytics",
    "marketing"
  ],
  "author": "DevFerreiraG",
  "license": "MIT",
  "dependencies": {
    "@types/cookie-parser": "^1.4.8",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "express-rate-limit": "^7.2.0",
    "express-sitemap-xml": "^3.0.1",
    "helmet": "^7.1.0",
    "mongoose": "^8.2.0",
    "morgan": "^1.10.0",
    "node-cache": "^5.1.2",
    "pino": "^8.19.0",
    "pino-pretty": "^10.3.1",
    "prerender-node": "^3.7.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.25",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.5.3",
    "rimraf": "^5.0.10",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
