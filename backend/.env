# Configurações do Ambiente
NODE_ENV=production
PORT=3001

# Segurança
COOKIE_SECRET=alterar_para_valor_seguro_em_producao
ADMIN_API_KEY=alterar_para_valor_seguro_em_producao
CSRF_SECRET=alterar_para_valor_seguro_em_producao

# Habilitar recursos
ENABLE_HELMET=true
ENABLE_COMPRESSION=true
ENABLE_CSRF=true
ENABLE_ETAGS=true
HTTPS_ONLY=true

# Configurações de CORS
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-API-KEY,X-Analytics-ID,X-Marketing-Source
CORS_MAX_AGE=86400

# Configurações de Rate Limit
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_ENABLE_TRUSTED_PROXY=true
RATE_LIMIT_SKIP_FAILED_REQUESTS=false
RATE_LIMIT_STRICT_WINDOW_MS=3600000
RATE_LIMIT_STRICT_MAX=10

# Configurações de arquivos estáticos
STATIC_FILES_MAX_AGE=2592000000

# Configurações de compressão
COMPRESSION_LEVEL=6

# Configurações de retenção de dados (em meses)
DATA_RETENTION_MONTHS=26 